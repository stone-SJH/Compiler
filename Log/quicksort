program qs_test

procedure QuickSort(A, size); 

procedure _QuickSort(A, iLo, iHi); 
var Lo as integer;
var Hi as integer;
var Mid as integer;
var T as integer;
var temp as integer;
begin 
Lo := iLo; 
Hi := iHi; 
Mid := A[(Lo + Hi) div 2]; 
repeat 
while A[Lo] < Mid do Lo := Lo + 1; end while;
while A[Hi] > Mid do Hi := Hi - 1; end while;
if Lo <= Hi then  
temp = A[Lo];
A[Lo] = A[Hi];
A[Hi] = temp;
T := A[Lo]; 
A[Lo] := A[Hi]; 
A[Hi] := T; 
Lo := Lo + 1; 
Hi := Hi - 1; 
end if;
until Lo > Hi; 
if Hi > iLo then _QuickSort(A, iLo, Hi); end if;
if Lo < iHi then _QuickSort(A, Lo, iHi); end if;
end; 

begin 
_QuickSort(A, 0, size-1); 
end; 